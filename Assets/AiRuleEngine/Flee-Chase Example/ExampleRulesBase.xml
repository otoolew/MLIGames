<?xml version="1.0" encoding="UTF-8"?>
<XMLRules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="XMLRules.xsd">
  <RuleBase>
    <Variables>
      <Name>Distance</Name>
      <Type>2</Type>
      <Value>
        <Float>0</Float>
      </Value>
      <UpdateScript>
        <ScriptName>AiRuleEngine.DistanceFromSelf</ScriptName>
        <Parameter>
          <Name>targetObject</Name>
          <Type>UnityEngine.GameObject</Type>
          <Value>
            <String>Cube</String>
          </Value>
        </Parameter>
      </UpdateScript>
    </Variables>
    <Rules>
      <Name>Flee Target</Name>
      <Condition>
        <Relational>
          <LHSArithmeticExpression>
            <Value>
              <Variable>
                <Name>Distance</Name>
                <Type>2</Type>
              </Variable>
            </Value>
          </LHSArithmeticExpression>
          <RelationalOperator>
            <LessThan>LessThan</LessThan>
          </RelationalOperator>
          <RHSArithmeticExpression>
            <Value>
              <Constant>
                <Float>5</Float>
              </Constant>
            </Value>
          </RHSArithmeticExpression>
        </Relational>
      </Condition>
      <Action>
        <CallScript>
          <ScriptName>AiRuleEngine.Flee</ScriptName>
          <Parameter>
            <Name>destinationObject</Name>
            <Type>UnityEngine.GameObject</Type>
            <Value>
              <String>Sphere</String>
            </Value>
          </Parameter>
          <Parameter>
            <Name>speed</Name>
            <Type>System.Int32</Type>
            <Value>
              <Integer>5</Integer>
            </Value>
          </Parameter>
        </CallScript>
      </Action>
      <Priority>100</Priority>
    </Rules>
    <Rules>
      <Name>Chase Target</Name>
      <Condition>
        <Relational>
          <LHSArithmeticExpression>
            <Value>
              <Variable>
                <Name>Distance</Name>
                <Type>2</Type>
              </Variable>
            </Value>
          </LHSArithmeticExpression>
          <RelationalOperator>
            <GreaterThan>GreaterThan</GreaterThan>
          </RelationalOperator>
          <RHSArithmeticExpression>
            <Value>
              <Constant>
                <Float>10</Float>
              </Constant>
            </Value>
          </RHSArithmeticExpression>
        </Relational>
      </Condition>
      <Action>
        <CallScript>
          <ScriptName>AiRuleEngine.Chase</ScriptName>
          <Parameter>
            <Name>destinationObject</Name>
            <Type>UnityEngine.GameObject</Type>
            <Value>
              <String>Cube</String>
            </Value>
          </Parameter>
          <Parameter>
            <Name>speed</Name>
            <Type>System.Int32</Type>
            <Value>
              <Integer>6</Integer>
            </Value>
          </Parameter>
        </CallScript>
      </Action>
      <Priority>100</Priority>
    </Rules>
  </RuleBase>
</XMLRules>